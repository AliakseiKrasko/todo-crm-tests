{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": [
      "cypress"
    ]
  },
  "include": [
    "src",
    "cypress/**/*.ts",
    "cypress/**/*.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
